extends layout.pug

include utils.pug

block content
  h3(class='pb-3'): em for #{park.parkName}
  +validationErrorSummary(errors)
  form(action=`/park/${park.id}/attraction/add` method='post')
    include attraction-form-fields.pug
    div(class='py-4')
      button(type='submit' class='btn btn-primary') Add Attraction
      a(href=`/park/${park.id}` class='btn btn-warning ml-2') Cancel
